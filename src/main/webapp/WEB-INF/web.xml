<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<description><![CDATA[Seawork engine application]]></description>
	<display-name>Seawork engine</display-name>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>seaworkengine.root</param-value>
	</context-param>


	<!-- BEGIN SPRING CONTEXT -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:/etc/spring/bean_definitions.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:/etc/logging_configuration.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- END SPRING CONTEXT -->

	<!-- - BEGIN Spring Security Filter Chains -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<!-- CXF -->
	<!-- <servlet> <servlet-name>CXFServlet</servlet-name> <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class> 
		<load-on-startup>1</load-on-startup> </servlet> <servlet-mapping> <servlet-name>CXFServlet</servlet-name> 
		<url-pattern>/wservice/*</url-pattern> </servlet-mapping> -->




	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- - END Spring Security Filter Chains -->

	<listener>
		<listener-class>org.uario.seaworkengine.web.WebAppContext</listener-class>
	</listener>

	<!-- SIRONA -->
	<context-param>
		<param-name>org.apache.sirona.reporting.activated</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>org.apache.sirona.reporting.mapping</param-name>
		<param-value>/monitoring</param-value>
	</context-param>


</web-app>
